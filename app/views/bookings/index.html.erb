
<br/>
<div class="wrapper mt-5 col-md-9 offset-md-2">
  <h2>Your Booking</h2>

<% if current_user.bookings.empty? %>
  <p>You don't have any upcoming tours. <%= link_to "Start exploring!", tours_path, class: 'btn btn-info' %> </p>
<% else %>
  <ul class='list-group booking_list'>
    <% current_user.bookings.each_with_index do |booking, index| %>
    <li clas="mt-4">
      <h3 class="border-bottom pb-3"><%= index + 1 %> <span style="font-size: 18px;"><i class="fas fa-mountain"></i></span> <%= booking.tour.name%></h3>
      <div>
         <strong>Date: </strong><%= booking.nice_date %> - <strong>People:</strong> <%= booking.headcount %> - <strong>Price: ï¿¥</strong> <%= booking.tour.cost %> - <strong>Total:</strong>
         <%= link_to raw('<i class="fas fa-trash-alt"></i>'), bookings_path(booking), method: :delete, data: { confirm: "Do you want to delete this booking?" }%>
      </div>
      <div class="d-flex justify-content-between mt-3">
        <%= cl_image_tag booking.tour.photo%>
        <p class='ml-3'><%= booking.tour.details%></p>
      </div>


    </li>
  <% end %>
  </ul>
<% end %>


</div>

