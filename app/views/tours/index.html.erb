<div class="banner d-flex flex-column justify-content-end align-items-center" style="background-image: url('https://media.giphy.com/media/ToMjGpxInCZSzD3V82s/giphy.gif');">
  <h1>Thu's Tours</h1>
  <a href="#tours"><i class="fas fa-chevron-circle-down"></i></a>
</div>

<div class="card-container d-flex" id="tours">
  <div class="all-cards">
    <h3 class="ml-4 mt-5 pt-4">Available tours</h3>
    <div class="cards">
      <% @tours.each do |tour| %>
        <%= link_to tour_path(tour), class: "tour-link", :action => 'go' do %>
          <div class="tour-card">
            <%= cl_image_tag tour.photo, crop: :fill %>
            <div class="tour-info">
              <h5 class="mb-0"><%= tour.name %></h5>
              <p><%= tour.details.first(120) %>...</p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div
  id="map"
  style="width: 100%;
  height: 100vh;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

  </div>
</div>
