<div class="banner d-flex justify-content-around align-items-center" style="background-image: url('https://source.unsplash.com/random');">
  <h1>Thu's Tour</h1>
</div>

<div class="card-container d-flex">
  <div class="all-cards">
    <h3 class="ml-3 mt-4">Available tours</h3>
    <div class="cards">
      <% @tours.each do |tour| %>
        <div class="tour-card">
          <%= cl_image_tag tour.photo, crop: :fill %>
          <div class="tour-info">
            <h5><%= link_to tour.name.capitalize, tour_path(tour), class: 'tour-name' %></h5>
            <p><%= tour.details %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

  </div>
</div>
