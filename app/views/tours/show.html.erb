<div class="banner" style="background-image: url('https://source.unsplash.com/random');">
</div>

<div class="container d-flex my-5">
  <div class="tour-description">
    <h3> <%= JSON.parse(@tour.name).join(" ") %> </h3>
    <h6>category</h6>
    <h3> ¥ <%= @tour.cost %></h3>
    <p>
      <%= @tour.details %>
    </p>
    <div class="tour-photo d-flex justify-content-between">
      <img src="https://source.unsplash.com/random" alt="">
      <img src="https://source.unsplash.com/random" alt="">
      <img src="https://source.unsplash.com/random" alt="">
    </div>
  </div>

  <div class="request d-flex align-item-center justify-content-around flex-column ml-5">
    <div class="form p-5">
      <%= simple_form_for [@tour, @booking] do |f| %>
      <div class="form-group">
        <%= f.input :headcount, label: "Number of people",:placeholder => 'How many', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label 'Date' %>
        <%= f.date_field :date, class: "form-control" %>
      </div>
      <div class="form-group">
        <h5>Total</h5>
        <h4 class="tour_cost"> ￥<%= @tour.cost %> </h4>
      </div>
        <%= f.submit 'Request', class: "btn btn-info btn-lg btn-block" %>
      <% end %>
    </div>
  </div>
</div>
